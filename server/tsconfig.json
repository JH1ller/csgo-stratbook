{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",

    "sourceMap": true,
    "baseUrl": "./",

    "lib": [
      "ESNext",
    ],


    "outDir": "./dist",
    "noEmitHelpers": true,
    "importHelpers": false,
    "noImplicitAny": true,
    "paths": {
      "src/*": ["src/*"]
    },

    "types": ["node", "webpack-env", "jest"]
  },
  "exclude": ["/dist"]
}
