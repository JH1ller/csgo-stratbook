{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,

    "noEmitHelpers": true,
    "importHelpers": false,

    "paths": {
      "src/*": ["src/*"],
    },

    "types": [
      "node",
      "webpack-env",
      "jest"
    ]
  },
  "exclude": [
    "/dist"
  ]
}
