{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",

    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,

    "sourceMap": true,
    "baseUrl": "./",

    "lib": ["ESNext"],


    "outDir": "./dist",
    "noEmitHelpers": true,
    "importHelpers": false,

    "paths": {
      "src/*": ["src/*"]
    },

    "types": ["node", "webpack-env", "jest"]
  },

  "exclude": ["/dist"]
}
