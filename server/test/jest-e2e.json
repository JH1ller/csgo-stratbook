{
  "verbose": true,
  "preset": "ts-jest",

  "globals": {
    "ts-jest": {
      "tsconfig": {
        "importHelpers": true
      }
    }
  },

  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],

  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",

  "transform": {
    "^.+\\.(t|j)s$": "ts-jest",
    "^.+\\.hbs$": "<rootDir>/__transform__/html-loader.js"
  },

  "moduleNameMapper": {
    "^src\/(.*)$": "<rootDir>/../src/$1"
  }
}
