<!-- test escaping with variables -->
<mjml>
  <mj-head>
    <!-- invisible text, but is parsed for preview (second line on gmail)-->
    <mj-preview>Hi, {{userName}}! you can reset your password here</mj-preview>
  </mj-head>
  <mj-body>
    <mj-section full-width="full-width">
      <mj-column>
        <mj-text>To change your password click the button below:</mj-text>
      </mj-column>
    </mj-section>
    <mj-section full-width="full-width">
      <mj-column>
        <mj-button font-family="Helvetica" background-color="#41b883" color="white" href="{{link}}">Change password</mj-button>
      </mj-column>
    </mj-section>

    <mj-section>
      <mj-column>
        <mj-text>If the above button doesn't work, copy the link below instead.</mj-text>
      </mj-column>
    </mj-section>

    <mj-section>
    	<mj-column>
      	<mj-text>{{link}}</mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
